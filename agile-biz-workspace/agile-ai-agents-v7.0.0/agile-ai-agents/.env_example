# AgileAiAgents Configuration
# Copy this file to .env and add your credentials

# System Version (DO NOT MODIFY)
AGILE_AI_AGENTS_VERSION=1.0.0

# ===========================================
# LLM API Credentials
# ===========================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Configuration  
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI Configuration
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=your_azure_openai_endpoint_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name_here

# ===========================================
# MCP Server Credentials
# ===========================================

# Zen MCP Server (Cost Optimization)
ZEN_MCP_ENABLED=false
ZEN_MCP_ENDPOINT=your_zen_mcp_endpoint_here
ZEN_MCP_API_KEY=your_zen_mcp_api_key_here

# Figma MCP (UI/UX Agent)
FIGMA_MCP_ENABLED=false
FIGMA_ACCESS_TOKEN=your_figma_access_token_here
FIGMA_TEAM_ID=your_figma_team_id_here

# GitHub MCP (Coder & DevOps Agents)
GITHUB_MCP_ENABLED=false
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_DEFAULT_OWNER=your_github_username_or_org
GITHUB_DEFAULT_REPO=your_default_repo_name

# Playwright MCP (Testing Agent)
PLAYWRIGHT_MCP_ENABLED=false
PLAYWRIGHT_BROWSERS_PATH=/path/to/browsers
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_SLOW_MO=0
PLAYWRIGHT_DEFAULT_TIMEOUT=30000

# BrowserStack MCP (Testing Agent)
BROWSERSTACK_MCP_ENABLED=false
BROWSERSTACK_USERNAME=your_browserstack_username
BROWSERSTACK_ACCESS_KEY=your_browserstack_access_key
BROWSERSTACK_PROJECT_NAME=AgileAiAgents_Testing
BROWSERSTACK_BUILD_NAME=Sprint_Testing
BROWSERSTACK_LOCAL=false
BROWSERSTACK_DEBUG=false

# Supabase MCP (Coder, DevOps, API Agents)
SUPABASE_MCP_ENABLED=false
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_JWT_SECRET=your_jwt_secret
SUPABASE_DATABASE_PASSWORD=your_database_password

# AWS MCP Suite (DevOps, Coder, API Agents)
AWS_MCP_ENABLED=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
# Optional: Specific AWS service configurations
AWS_S3_DEFAULT_BUCKET=your_default_bucket_name
AWS_LAMBDA_FUNCTION_PREFIX=your_function_prefix
AWS_DYNAMODB_TABLE_PREFIX=your_table_prefix
AWS_CLOUDWATCH_LOG_GROUP=/aws/lambda/your-app
AWS_IAM_READ_ONLY=true  # Set to false for write operations
AWS_BUDGET_ALERT_THRESHOLD=100  # Alert when spending exceeds this amount

# Firecrawl MCP (Research, Marketing, SEO, Analysis Agents)
FIRECRAWL_MCP_ENABLED=false
FIRECRAWL_API_KEY=your_firecrawl_api_key
# Optional: For self-hosted Firecrawl instances
FIRECRAWL_API_URL=https://api.firecrawl.dev
# Optional: Default settings
FIRECRAWL_DEFAULT_FORMAT=markdown
FIRECRAWL_DEFAULT_TIMEOUT=30000
FIRECRAWL_MOBILE_MODE=false

# Perplexity MCP (Research, Marketing, SEO, Analysis Agents)
PERPLEXITY_MCP_ENABLED=false
PERPLEXITY_API_KEY=your_perplexity_api_key
# Optional: Default settings
PERPLEXITY_DEFAULT_MODEL=sonar-pro
PERPLEXITY_SEARCH_MODE=web  # web or academic
PERPLEXITY_REASONING_EFFORT=medium  # low, medium, high
PERPLEXITY_MAX_TOKENS=4000
PERPLEXITY_TEMPERATURE=0.7

# Context7 MCP (Coder, DevOps Agents)
CONTEXT7_MCP_ENABLED=true
# Optional: Default settings
CONTEXT7_DEFAULT_TOKENS=10000
CONTEXT7_AUTO_RESOLVE=true  # Automatically resolve library IDs
CONTEXT7_CACHE_DOCS=false   # Cache documentation locally

# Database MCP
DATABASE_MCP_ENABLED=false
DATABASE_CONNECTION_STRING=your_database_connection_string_here

# ===========================================
# External API Credentials
# ===========================================

# Google Services
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here
GOOGLE_ANALYTICS_API_KEY=your_google_analytics_api_key_here

# Social Media APIs
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# ===========================================
# Marketing & Analytics
# ===========================================

# Email Marketing
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
SENDGRID_API_KEY=your_sendgrid_api_key_here

# PPC & Advertising
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id_here
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret_here
GOOGLE_ADS_REFRESH_TOKEN=your_google_ads_refresh_token_here
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token_here

FACEBOOK_ADS_ACCESS_TOKEN=your_facebook_ads_access_token_here
FACEBOOK_ADS_APP_SECRET=your_facebook_ads_app_secret_here

# Analytics
MIXPANEL_PROJECT_TOKEN=your_mixpanel_project_token_here
SEGMENT_WRITE_KEY=your_segment_write_key_here

# ===========================================
# Development & Deployment
# ===========================================

# Database Configuration
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=your_database_name
DATABASE_USER=your_database_user
DATABASE_PASSWORD=your_database_password

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=your_s3_bucket_name_here

# ===========================================
# Port Configuration (IMPORTANT for multiple projects)
# ===========================================
# Change these ports if running multiple projects simultaneously
# to avoid port conflicts. Each project needs unique ports.

# AgileAiAgents Dashboard Port
DASHBOARD_PORT=3001

# Your Project Ports (configure based on your project needs)
# Frontend Development Server (e.g., Vite, webpack-dev-server)
FRONTEND_PORT=5173

# Backend API Server
BACKEND_PORT=3000

# Additional Service Ports (add as needed)
# WEBSOCKET_PORT=8080
# ADMIN_PORT=3002
# METRICS_PORT=9090

# ===========================================
# Multi-Repository Configuration
# ===========================================
# Configure these when evolving to multi-repo structure

# Repository Names (customize based on your structure)
REPO_MARKETING=my-app-marketing
REPO_APPLICATION=my-app
REPO_API=my-app-api
REPO_ADMIN=my-app-admin

# Repository Ports (ensure no conflicts)
MARKETING_PORT=5273  # Marketing site port
APPLICATION_PORT=5173  # Main app port
API_PORT=3000  # API server port
ADMIN_PORT=3002  # Admin dashboard port

# Multi-Repo GitHub Configuration
GITHUB_ORG_NAME=your-org-name
GITHUB_MARKETING_REPO=${REPO_MARKETING}
GITHUB_APPLICATION_REPO=${REPO_APPLICATION}
GITHUB_API_REPO=${REPO_API}
GITHUB_ADMIN_REPO=${REPO_ADMIN}

# CI/CD Coordination
MULTI_REPO_DEPLOY_STRATEGY=sequential  # sequential or parallel
DEPLOY_ORDER=api,application,admin,marketing
ROLLBACK_STRATEGY=auto  # auto or manual

# Database Ports (if not using default)
# DATABASE_PORT=5432  # PostgreSQL default
# REDIS_PORT=6379     # Redis default

# Deployment Configuration
ENVIRONMENT=development

# ===========================================
# Security & Monitoring
# ===========================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Security
SECURITY_SALT_ROUNDS=12
API_RATE_LIMIT=100

# Dashboard Authentication
DASHBOARD_AUTH_ENABLED=false
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=your_secure_password_here

# Monitoring
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# ===========================================
# Community Learning System (Future)
# ===========================================

# Community API (For future improvement sharing)
COMMUNITY_API_ENABLED=false
COMMUNITY_API_ENDPOINT=https://api.agileaiagents.com
COMMUNITY_API_KEY=your_community_api_key_here

# ===========================================
# Instructions
# ===========================================

# 1. Copy this file: cp .env_example .env
# 2. Fill in your actual credentials above
# 3. Add .env to your .gitignore file
# 4. Only enable services you plan to use
# 5. Keep AGILE_AI_AGENTS_VERSION unchanged for upgrade compatibility