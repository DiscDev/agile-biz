{
  "statusLine": {
    "type": "command",
    "command": "{{USER_PATH}}/.claude/hooks/statusline.sh",
    "padding": 0
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "{{USER_PATH}}/.claude/hooks/session-start.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "{{USER_PATH}}/.claude/hooks/on-file-create.sh"
          }
        ]
      },
      {
        "matcher": "Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "{{USER_PATH}}/.claude/hooks/on-file-change.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "{{USER_PATH}}/.claude/hooks/pre-command-validation.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "{{USER_PATH}}/.claude/hooks/user-prompt-submit.sh"
          }
        ]
      }
    ]
  }
}